services:
  core:
    volumes:
      - type: bind
        source: ~/Library/Application Support/TrueBlocks/cache
        target: /cache
      - type: bind
        source: ~/Library/Application Support/TrueBlocks/unchained
        target: /index
  monitors:
    volumes:
      - type: bind
        source: ~/Library/Application Support/TrueBlocks/cache
        target: /cache
      - type: bind
        source: ~/Library/Application Support/TrueBlocks/unchained
        target: /index
      - type: bind
        source: ~/Project/addresses
        target: /addresses
